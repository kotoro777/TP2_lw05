@model DatabaseModel[]

<h1>Список данных</h1>

<table>
    <tr>
        <th>Идентификатор</th>
        <th>Название</th>
        <th>Дата создания</th>
        <th>Автор</th>
        <th>Количество записей</th>
        <th>Рейтинг</th>
    </tr>

    @for (int i = 0; i < Model.Length; i++)
    {
        <tr>
                <td>@Model[i].Id</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].CreatedDate</td>
                <td>@Model[i].Author</td>
                <td>@Model[i].RecordCount</td>
                <td>@Model[i].Rating</td>
            <td>
                @Html.ActionLink("Подробнее", "Details", new { id = i }) |
                @Html.ActionLink("Редактировать", "Edit", new { id = i })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Добавить данные", "Create")
